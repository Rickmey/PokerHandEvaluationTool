<local:BaseHand x:Class="PokerEvaluationToolUI.SixCardHand"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PokerEvaluationToolUI"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1000">
    <Viewbox
        Margin="10"
        >
        <DockPanel>

            <local:Odds
                DataContext="{Binding Odds}"
                DockPanel.Dock="Top"
                />
            <Grid>
                <local:CardView HorizontalAlignment="Left" Margin="0,20,0,0" VerticalAlignment="Top" Width="40"/>
                <local:CardView HorizontalAlignment="Left" Margin="30,0,0,0" VerticalAlignment="Top" Width="40"/>
                <local:CardView HorizontalAlignment="Left" Margin="60,0,0,0" VerticalAlignment="Top" Width="40"/>

                <local:CardView HorizontalAlignment="Left" Margin="0,82,0,0" VerticalAlignment="Top" Width="40" />
                <local:CardView HorizontalAlignment="Left" Margin="30,82,0,0" VerticalAlignment="Top" Width="40" />
                <local:CardView HorizontalAlignment="Left" Margin="60,82,0,0" VerticalAlignment="Top" Width="40" />
            </Grid>
        </DockPanel>
    </Viewbox>
</local:BaseHand>
